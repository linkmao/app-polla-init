                <option value="{{thirdTeam}}">{{thirdTeam}}</option>
                <option value="{{fourthTeam}}">{{fourthTeam}}</option>
              </select>
          </div>
        </div>

    <div class="row">
      <p>Puntos ganados: </p>
      <h2>{{earnedScore}}</h2>
    

        <div class="row">
            <button type="submit" class="btn btn-primary mb-3">Clasificacion</button>
          </div>
      
    </div>
  </form>
</section>
{{else}}
