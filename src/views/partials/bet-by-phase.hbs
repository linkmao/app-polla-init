{{!-- INICIO RENDERIZADO BET 1 --}}
  <div class="card" style="width: 200 px;">
    {{!-- <img src="..." class="card-img-top" alt="..."> --}}
    <div class="card-body">
      <h5 class="card-title">Juego número: {{dataBet.gameNumber1}}</h5>
      <div class="row">
        <div class="col"><img src="/img/flags/{{dataBet.localFlag1}}" alt="flag" width="50%"></div>
        <div class="col">
          <p class="card-text">{{dataBet.localTeam1}}</p>
        </div>
        <div class="col"><img src="/img/flags/{{dataBet.visitFlag1}}" alt="flag" width="50%"></div>
        <div class="col">
          <p class="card-text">{{dataBet.visitTeam1}}</p>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <h2 class="card-text">{{dataBet.localScore1}}</h2>
        </div>
        <div class="col">
          <p>Apuesta analoga: </p>
          <h2>{{dataBet.analogScore1}}</h2>
        </div>
        <div class="col">
          <h2 class="card-text">{{dataBet.visitScore1}}</h2>
        </div>
      </div>
      <p>Puntos por resultado: {{dataBet.pointByScore1}}</p>
      <p>Puntos por L-E-V: {{dataBet.pointByAnalogScore1}}</p>
      {{#if renderPoint}}
      <p>Puntos por local coincidente: {{dataBet.pointByLocalEqual1}}</p>
      <p>Puntos por visitante coincidente: {{dataBet.pointByVisitEqual1}}</p>
        {{#if rederPointVirtualGame}}
          <p>Puntos por ganador: {{dataBet.pointByWin1}}</p>
        {{/if}}
      {{/if}}
      <p>PUNTOS TOTAL: {{dataBet.totalScore1}}</p>
    </div>

    <div class="card-footer">
      <div class="container">
        <form action="../api/bet-games/me/bet/{{dataBet.idBet1}}/{{dataBet.idNextGame}}/{{dataBet.phase}}/?_method=PUT" method="POST">
          <input type="hidden" name="_method" value="PUT">
          <div class="row">
            <div class="col">
              <div class="mb-3">
                {{!-- <label for="exampleFormControlInput1" class="form-label">Goles local</label> --}}
                <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="Goles local"
                  name="localScore" required>
              </div>
            </div>

            <div class="col">
              <div class="mb-3">
                {{!-- <label for="select" class="form-label">Apuesta L-E-V</label> --}}
                <select class="form-select" aria-label="Default select example" id="select" name="analogScore" required>
                  <option value="L">Local</option>
                  <option value="E">Empate</option>
                  <option value="V">Visitante</option>
                </select> 
              </div>
            </div>

            <div class="col">
              <div class="mb-3">
                {{!-- <label for="exampleFormControlInput1" class="form-label">Goles visitante</label> --}}
                <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="Goles visitante"
                  name="visitScore" required>
              </div>
            </div>


          </div>
          
          <div class="row">
            <div class="col-2">
              Clasifica:
            </div>
            <div class="col-2">
              <img src="/img/flags/{{dataBet.betLocalFlag}}" alt="flag" width="70%">
            </div>
            <div class="col-3">
              {{dataBet.betLocalTeam}}
            </div>
            <div class="col-5">
              <div class="mb-3">
                <select class="form-select" aria-label="Default select example" id="select" name="betLocalTeam" required>
                  <option value={{dataBet.localTeamId1}}>{{dataBet.localTeam1}}</option>
                  <option value={{dataBet.visitTeamId1}}>{{dataBet.visitTeam1}}</option>
                </select>
              </div>
            </div>
          </div>
          

          <div class="row">
            <button type="submit" class="btn btn-primary mb-3">Apuesta!!</button>
          </div>
        </form>
      </div>
    </div>
  </div>

