{{#each data}}

<form action="../api/bet-games/me/bet/{{idBet}}/?_method=PUT" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <div class="card mb-4">
    <div class="row">
      <h6>Elige ganador por partido</h6>
    </div>
    <div class="row">
      <div class="col">
        <select class="form-select" aria-label="Default select example" id="select" name="betLocalTeam" required>
          <option value={{team1._id}}>{{team1.name}}</option>
          <option value={{team2._id}}>{{team2.name}}</option>
        </select>
      </div>
      <div class="col">
        <select class="form-select" aria-label="Default select example" id="select" name="betVisitTeam" required>
          <option value={{team3._id}}>{{team3.name}}</option>
          <option value={{team4._id}}>{{team4.name}}</option>
        </select>
      </div>
    </div>
    <div class="row">
      <h6>Marcador y apuesta L-E-V</h6>
    </div>
    <div class="row">
      <div class="col">
        <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="Goles Local"
          name="localScore" required>
      </div>
      <div class="col">
        <select class="form-select" aria-label="Default select example" id="select" name="analogScore" required>
          <option value="L">Local</option>
          <option value="E">Empate</option>
          <option value="E">Visitante</option>
        </select>
      </div>
      <div class="col">
        <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="Goles visitante"
          name="visitScore" required>
      </div>
    </div>
    <div class="row">
      <button type="submit" class="btn btn-primary mb-2">Apuesta!!</button>
    </div>
  </div>
</form>
{{/each}}